<h2>MOVIE EDITION</h2>


<form action="/movies/{{necessaryInfo.[0].id}}/edit" method="POST">

    <div class="row">
        <div class="col">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" placeholder="XXXXX" name="title" value="{{necessaryInfo.[0].title}}">
        </div>
        <div class="col">
            <label for="genre" class="form-label">Genre</label>
            <input type="text" class="form-control" id="genre" placeholder="XXXXXX" name="genre" value="{{necessaryInfo.[0].genre}}">
        </div>
        <div>
            <label for="plot" class="form-label">Plot</label>
            <input type="text" class="form-control" id="plot" placeholder="XXXXXX" name="plot" value="{{necessaryInfo.[0].plot}}">
        </div>
        <div>
            <label for="cast" class="form-label">CAST</label>
            <select name="cast" id="cast" multiple>


                {{#each necessaryInfo.[1]}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>

        </div>
        <button type="submit" class="btn btn-primary">EDIT</button>
    </div>

</form>
