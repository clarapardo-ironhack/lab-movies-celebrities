<h1>NEW MOVIE</h1>


<form action="/movies/create" method="POST">

    <div class="row">
        <div class="col">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" placeholder="XXXXX" name="title">
        </div>
        <div class="col">
            <label for="genre" class="form-label">Genre</label>
            <input type="text" class="form-control" id="genre" placeholder="XXXXXX" name="genre">
        </div>
        <div>
            <label for="plot" class="form-label">Plot</label>
            <input type="text" class="form-control" id="plot" placeholder="XXXXXX" name="plot">
        </div>
        <div>
            <label for="cast" class="form-label">CAST</label>
            <select name="cast" id="cast" multiple>


                {{#each celebrity}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>

        </div>
        <button type="submit" class="btn btn-primary">CREATE</button>
    </div>

</form>